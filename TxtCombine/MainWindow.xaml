<Window x:Class="TxtCombine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TxtCombine"
        mc:Ignorable="d"
        Title="MainWindow" Height="339.6" Width="562.4">
    <Grid>
        <Button x:Name="btn_path" Content="选择文件目录" HorizontalAlignment="Left" Margin="15,13,0,0" VerticalAlignment="Top" Width="120" Click="btn_path_Click" Height="23"/>
        <TextBox x:Name="txt_path" HorizontalAlignment="Left" Height="23" Margin="140,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" IsReadOnly="True" BorderThickness="0" Background="#FFFFEFEF"/>
        <Label Content="搜索关键字" HorizontalAlignment="Left" Margin="15,41,0,0" VerticalAlignment="Top" Height="23" Width="120"/>
        <TextBox x:Name="txt_SearchKey" HorizontalAlignment="Left" Height="23" Margin="140,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="246"/>
        <Button x:Name="btn_Search" Content="搜索" HorizontalAlignment="Left" Margin="410,41,0,0" VerticalAlignment="Top" Width="102" Height="23" Click="btn_Search_Click"/>
        <ListBox x:Name="lb_SearchResult" HorizontalAlignment="Left" Height="108" Margin="15,69,0,0" VerticalAlignment="Top" Width="497"/>

    </Grid>
</Window>
